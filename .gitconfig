[user]
	name = James Rampton
	email = me@jamesrampton.com
[commit]
	gpgsign = false
[core]
	editor = hx
	pager = delta
[gpg]
	program = /opt/homebrew/bin/gpg
[delta]
    navigate = true    # use n and N to move between diff sections
    light = false
	side-by-side = true
	line-numbers = true
	syntax-theme = base16
	true-color = always
[diff]
	colorMoved = default
[interactive]
	diffFilter = delta --color-only --features=interactive
[merge]
	conflictstyle = diff3
[init]
	defaultBranch = main
[pull]
	rebase = false
