[user]
	name = James Rampton
	email = me@jamesrampton.com
[commit]
	gpgsign = false
[core]
	editor = hx
	pager = delta
[gpg]
	program = /opt/homebrew/bin/gpg
[delta]
    navigate = true    # use n and N to move between diff sections
    light = false
	side-by-side = true
	line-numbers = true
	syntax-theme = base16
	true-color = always
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = false
[diff]
	colorMoved = default
	tool = Kaleidoscope
[interactive]
	diffFilter = delta --color-only --features=interactive
[merge]
	conflictstyle = diff3
	tool = Kaleidoscope
[init]
	defaultBranch = main
[pull]
	rebase = false
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" \"$REMOTE\"
[mergetool]
	prompt = false
