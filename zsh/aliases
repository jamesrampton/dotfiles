# shell
alias ..='cd ..'
alias ab='vim ~/bin/dotfiles/bash/aliases'
alias az='vim ~/bin/dotfiles/zsh/aliases'
alias backup='/System/Library/CoreServices/backupd.bundle/Contents/Resources/backupd-helper'
alias grep='GREP_COLOR="1;37;31" LANG=C grep --color=auto'
alias j='jobs'
alias l='ls -AF'
alias sob='source ~/bin/dotfiles/.bashrc'
alias soz='source ~/bin/dotfiles/.zshrc'
alias t='tree -aI .git | less'
function take() {
  mkdir "$*"
  cd "$*"
}

# git
alias g='git'
alias ga='git add'
alias gb='git branch'
alias gc='git commit'
function gcm() {
  git commit -v -m "$*"
}
alias gco='git checkout'
alias glm='git log --graph --pretty=format:"%h -%d %s (%cr) %an" --abbrev-commit --date="relative"'
alias gl='git log --graph --pretty=format:"%Cred%h%Creset -%C(yellow)%d%Creset %s %Cblue(%cr)%Creset %an" --abbrev-commit --date="relative"'
alias gpl='git pull'
alias gps='git push'
alias gs='git status'
alias gm='git merge --no-ff'
alias grm='git rm'

# vim
alias mvim='mvim --remote-silent'
alias v='vim'
